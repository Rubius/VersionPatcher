{
    "manifestVersion": 1,
    "id": "VersionPatcher",
    "name": "Version Patcher",
    "version": "0.0.3",
    "publisher": "Rubius",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Patches properties files like AssemblyInfo.cs, Info.plist, Android manifest.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "VersionPatcher/icon.png"        
    },
    "files": [
        {
            "path": "VersionPatcher"
        }
    ],
    "contributions": [
        {
            "id": "custom-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "VersionPatcher"
            }
        }
    ]
}